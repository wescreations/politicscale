<!-- app/views/home/_contact_form.html.erb -->

<%= form_for @contact, url: contact_index_path, remote: true do |f| %>
    <div class="col-md-6 ml-3">
        <%= f.label :name %></br>
        <%= f.text_field  :name, required: true, class: "form-control med" %></br>

        <%= f.label :office %></br>
        <%= f.text_field  :office, required: true, class: "form-control med" %></br>

        <%= f.label :email %></br>
        <%= f.text_field :email, required: true, class: "form-control med" %></br>

      <%= f.label :message %></br>
      <%= f.text_area :message, rows: 3, cols: 40, required: true, class: "form-control med textareaheight",
                        placeholder: "Send me a message"%></br>

      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>

      <%= f.submit 'Send Message', class: 'btn btn-primary' %><br><br>
    </div>
  <% end %>
  <div class="col-md-6" id="flash-message">
    <%= render 'flash' %>
  </div>